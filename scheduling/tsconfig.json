{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "allowImportingTsExtensions": true
    },
    "include": [
        "**/*.ts",
        "**/*.json",
    ],
    "exclude": [
        "node_modules"
    ]
}